// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Template User model for now
model User {
  uuid     String @unique @default(uuid())
  username String @unique
  password String
  email   String

  @@map("users")
}
model Session {
  token String @unique // The token for the string
  uuid String // The account the session belongs to
  expiresAt DateTime

  @@map("sessions")
}
